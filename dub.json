{
  "name": "gargula",
	"authors": [
		"gilzoide"
	],
	"description": "Game engine based on nested structs powered by raylib and compatible with betterC",
	"license": "public license",
	"configurations": [
		{
			"name": "library"
		},
		{
			"name": "betterC",
			"buildOptions": [
				"betterC"
			]
		},
		{
			"name": "basic_window",
			"sourceFiles": ["examples/basic_window.d"],
			"targetName": "basic_window",
			"targetType": "executable",
			"targetPath": "build"
		},
		{
			"name": "keyboard_input",
			"sourceFiles": ["examples/keyboard_input.d"],
			"targetName": "keyboard_input",
			"targetType": "executable",
			"targetPath": "build"
		},
		{
			"name": "mouse_input",
			"sourceFiles": ["examples/mouse_input.d"],
			"targetName": "mouse_input",
			"targetType": "executable",
			"targetPath": "build"
		},
		{
			"name": "texture_loading_and_drawing",
			"sourceFiles": ["examples/texture_loading_and_drawing.d"],
			"copyFiles": ["examples/oi.png"],
			"targetName": "texture_loading_and_drawing",
			"targetType": "executable",
			"targetPath": "build"
		}
	],
	"libs": [
		"raylib"
	],
	"dependencies": {
		"bettercmath": "~>0.3.0",
		"betterclist": "~>0.1.1",
		"flyweightbyid": "~>0.1.0"
	},
	"targetType": "sourceLibrary"
}
